<Window x:Class="ProjectHosh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectHosh"
        mc:Ignorable="d"
        Title="Search Algoritm" Height="750" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="SlateGray">
        <Grid x:Name="Map" Margin="0,0,0,200">

        </Grid>
        <Button x:Name="GeneratePatternbtn" Content="Generate Pattern" FontSize="18" HorizontalAlignment="Left" Margin="14,565,0,0" VerticalAlignment="Top" Height="60" Width="150" Click="GeneratePatternbtn_Click"/>
        <Button x:Name="HandyPatternbtn" Content="Handy Pattern" FontSize="18" HorizontalAlignment="Left" Margin="14,646,0,0" VerticalAlignment="Top" Height="60" Width="150" Click="HandyPatternbtn_Click"/>
        <Button x:Name="Clearbtn" Content="Clear" FontSize="20" HorizontalAlignment="Left" Margin="174,646,0,0" VerticalAlignment="Top" Height="60" Width="80" Click="Clearbtn_Click"/>
        <Button x:Name="Searchbtn" Content="Search" FontSize="20" HorizontalAlignment="Left" Margin="174,565,0,0" VerticalAlignment="Top" Height="60" Width="80" Click="Searchbtn_Click"/>
        <Label Content="Select Algoritm" FontSize="20" HorizontalAlignment="Left" Margin="277,568,0,0" VerticalAlignment="Top" Height="40" Width="144"/>
        <ComboBox x:Name="combobox" FontSize="25" HorizontalAlignment="Left" Margin="277,616,0,0" VerticalAlignment="Top" Width="144" Height="41">
            <ComboBoxItem Content="BFS" IsSelected="True"/>
            <ComboBoxItem Content="DFS"/>
            <ComboBoxItem Content="A*"/>
        </ComboBox>
        <Label Content="Time of Execution : " FontSize="20" HorizontalAlignment="Left" Margin="444,565,0,0" VerticalAlignment="Top" Height="50" Width="180"/>
        <Label x:Name="OpenNodesLb" FontSize="20" HorizontalAlignment="Left" Margin="641,646,0,0" VerticalAlignment="Top" Height="50" Width="70" RenderTransformOrigin="1.21,0.345"/>
        <Label Content="Opened Nodes : " FontSize="20" HorizontalAlignment="Left" Margin="444,646,0,0" VerticalAlignment="Top" Height="50" Width="180"/>
        <Label x:Name="TimeLb" FontSize="20" HorizontalAlignment="Left" Margin="641,558,0,0" VerticalAlignment="Top" Height="50" Width="70"/>
    </Grid>
</Window>
